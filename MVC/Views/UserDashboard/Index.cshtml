                // Get User ID dynamically
                var userId = getUserIdFromToken();
                if (!userId) {
                    showLoginAlert();
                    return;
                }

                // Initialize
                loadUserProfile(userId);
                loadAllJobs();

                // Event Listeners
                $(".edit-profile-btn").click(function () {
                    window.location.href = "/UserDetails/PersonalInfo";
