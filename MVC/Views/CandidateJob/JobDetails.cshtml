    .recommendations {
        margin-top: 2rem;
    }

    .recommendations h6 {
        font-weight: 600;
        margin-bottom: 0.75rem;
        color: #495057;
    }

    .recommendations li {
        margin-bottom: 0.5rem;
        color: #495057;
    }

