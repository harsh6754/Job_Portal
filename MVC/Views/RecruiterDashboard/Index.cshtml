@{
    ViewData["Title"] = "Dashboard";
    Layout = "_RecruiterLayout";
}
<style>
    .k-pager-numbers .k-link.k-state-selected {
        color: white;
        background-color: #3f51b5;
    }

    .k-pager-numbers .k-link {
        color: #3f51b5;
    }

    .k-pager-numbers .k-link:hover {
        color: white;
        background-color: #3f51b575;
    }
</style>

<!-- System Metrics -->
<div class="row g-4 mb-3">
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2 text-muted">Job Posted</h6>
                        <h2 class="card-title mb-0" id="totalJobs">0</h2>
                    </div>
                    <div class="bg-primary bg-opacity-10 p-3 rounded">
                        <i class="fas fa-briefcase text-info fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2 text-muted">Applicants</h6>
                        <h2 class="card-title mb-0" id="totalApplicants">0</h2>
                    </div>
                    <div class="bg-success bg-opacity-10 p-3 rounded">
                        <i class="fas fa-users text-primary fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2 text-muted">Rejected</h6>
                        <h2 class="card-title mb-0" id="totalRejected">0</h2>
                    </div>
                        <div class="bg-info bg-opacity-10 p-3 rounded">
                            <div class="stat-icon red">
                                <i class="fas fa-times-circle fa-2x"></i>
                            </div>
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row g-4 mb-2">
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2 text-muted">Schedule Meeting</h6>
                        <h2 class="card-title mb-0" id="totalInterviews">0</h2>
                    </div>
                    <div class="bg-warning bg-opacity-10 p-3 rounded">
                        <div class="stat-icon red">
                            <i class="fas fa-calendar-alt fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2 text-muted">Offer Send</h6>
                        <h2 class="card-title mb-0" id="totalOffers">0</h2>
                    </div>
                    <div class="bg-warning bg-opacity-10 p-3 rounded">
                        <i class="fas fa-file-alt text-warning fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2 text-muted">Hired</h6>
                        <h2 class="card-title mb-0" id="totalHired">0</h2>
                    </div>
                    <div class="stat-icon purple">
                        <i style="margin-right: 10px;" class="fas fa-user-check fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Date Range Controls -->
<div class="row mb-2">
    <div class="col-md-12 py-0">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <label class="me-2">Date Range:</label>
                    <input type="date" id="startDate" class="form-control me-2" style="width: auto;">
                    <input type="date" id="endDate" class="form-control me-2" style="width: auto;">
                    <button class="btn btn-primary" onclick="updateCharts()">Update Charts</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Charts Row -->
<div class="row mb-0">
    <!-- Interview Trends Chart -->
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0">Interview Trends</h5>
            </div>
            <div class="card-body">
                <div id="interviewTrendsChart" style="height: 300px;"></div>
            </div>
        </div>
    </div>
    <!-- Job Applications Trend Chart -->
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0">Job Applications Trend</h5>
            </div>
            <div class="card-body">
                <div id="jobApplicationsChart" style="height: 300px;"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let interviewTrendsChart;
        let jobApplicationsChart;
        let companyId;

        $(document).ready(function () {
            function getUserIdFromToken() {
                let token = localStorage.getItem("token");
                if (!token) return null;

                try {
                    let payload = JSON.parse(atob(token.split('.')[1]));
                    return payload.uid;
                } catch (e) {
                    console.error("Error decoding token:", e);
                    return null;
                }
            }

            // Initialize user and company data
            var userId = getUserIdFromToken();
            if (!userId) {
                console.error("User ID not found in token.");
                showMessage("Authentication error. Please log in again.", "error");
                return;
            }

            // Fetch companyId and then initialize dashboard
            $.ajax({
                url: `http://localhost:5086/api/CompanyApi/getCompanyId/${userId}`,
                type: "GET",
                success: function (response) {
                    companyId = response;
                    console.log("Company ID:", companyId);

                    // Set default date range to last 30 days
                    const endDate = new Date();
                    const startDate = new Date();
                    startDate.setDate(startDate.getDate() - 30);

                    document.getElementById('startDate').valueAsDate = startDate;
                    document.getElementById('endDate').valueAsDate = endDate;

                    // Initialize charts and load data
                    initializeCharts();
                    loadDashboardData();
                },
                error: function (xhr) {
                    console.error("Failed to fetch company ID:", xhr.responseText);
                    showMessage("Failed to load company data.", "error");
                }
            });
        });

        function initializeCharts() {
            // Initialize Interview Trends Chart
            interviewTrendsChart = $("#interviewTrendsChart").kendoChart({
                legend: { position: "bottom" },
                seriesDefaults: {
                    type: "line",
                    style: "smooth",
                    markers: {
                        visible: true,
                        size: 6
                    }
                },
                series: [
                    {
                        field: "interviews",
                        name: "Scheduled Interviews",
                        color: "#1a237e",
                        tooltip: {
                            visible: true,
                            format: "N0",
                            template: "#= category #<br/>Interviews: #= value #"
                        }
                    }
                ],
                categoryAxis: {
                    field: "date",
                    labels: {
                        rotation: -45,
                        format: "MM/dd/yyyy"
                    },
                    title: {
                        text: "Date"
                    }
                },
                valueAxis: {
                    labels: { format: "N0" },
                    title: {
                        text: "Number of Interviews"
                    }
                },
                tooltip: {
                    visible: true,
                    format: "N0",
                    template: "#= category #<br/>Interviews: #= value #"
                },
                chartArea: {
                    background: "none"
                },
                plotArea: {
                    background: "none"
                }
            }).data("kendoChart");

            // Initialize Job Applications Trend Chart
            jobApplicationsChart = $("#jobApplicationsChart").kendoChart({
                legend: { position: "bottom" },
                seriesDefaults: {
                    type: "column",
                    style: "smooth",
                    markers: {
                        visible: true,
                        size: 6
                    }
                },
                series: [
                    {
                        field: "applications",
                        name: "Applications",
                        color: "#ff9800",
                        tooltip: {
                            visible: true,
                            format: "N0",
                            template: "#= category #<br/>Applications: #= value #"
                        }
                    }
                ],
                categoryAxis: {
                    field: "date",
                    labels: {
                        rotation: -45,
                        format: "MM/dd/yyyy"
                    },
                    title: {
                        text: "Date"
                    }
                },
                valueAxis: {
                    labels: { format: "N0" },
                    title: {
                        text: "Number of Applications"
                    }
                },
                tooltip: {
                    visible: true,
                    format: "N0",
                    template: "#= category #<br/>Applications: #= value #"
                },
                chartArea: {
                    background: "none"
                },
                plotArea: {
                    background: "none"
                }
            }).data("kendoChart");

            updateCharts();
        }

        function updateCharts() {
            if (!companyId) {
                console.error("Company ID not set.");
                return;
            }

            const startDate = $("#startDate").val();
            const endDate = $("#endDate").val();

            // Update Interview Trends Chart
            $.getJSON(`http://localhost:5086/api/RecruiterApi/interview-trends?startDate=${startDate}&endDate=${endDate}&companyId=${companyId}`, function (data) {
                console.log("Interview Stats Data:", data);
                interviewTrendsChart.setDataSource(new kendo.data.DataSource({
                    data: data.map(item => ({
                        date: new Date(item.date),
                        interviews: item.interviews
                    }))
                }));
                interviewTrendsChart.refresh();
            }).fail(function (xhr) {
                console.error("Failed to load interview stats:", xhr.responseText);
            });

            // Update Job Applications Chart
            $.getJSON(`http://localhost:5086/api/RecruiterApi/application-trends?startDate=${startDate}&endDate=${endDate}&companyId=${companyId}`, function (data) {
                console.log("Application Stats Data:", data);
                jobApplicationsChart.setDataSource(new kendo.data.DataSource({
                    data: data.map(item => ({
                        date: new Date(item.date),
                        applications: item.applications
                    }))
                }));
                jobApplicationsChart.refresh();
            }).fail(function (xhr) {
                console.error("Failed to load application stats:", xhr.responseText);
            });
        }

        function loadDashboardData() {
            if (!companyId) {
                console.error("Company ID not set.");
                return;
            }

            $.getJSON(`http://localhost:5086/api/RecruiterApi/counts?companyId=${companyId}`, function (data) {
                $("#totalJobs").text(data.totalJobs);
                $("#totalApplicants").text(data.totalApplicants);
                $("#totalRejected").text(data.totalRejected);
                $("#totalInterviews").text(data.totalInterviews);
                $("#totalOffers").text(data.totalOffers);
                $("#totalHired").text(data.totalHired);
            }).fail(function (xhr) {
                console.error("Failed to load dashboard counts:", xhr.responseText);
            });
        }

        function showMessage(message, type) {
            // Placeholder for your notification system (e.g., toastr, alert)
            alert(message);
        }
    </script>
}