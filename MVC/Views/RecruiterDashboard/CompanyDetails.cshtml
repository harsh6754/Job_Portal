<script>
    //return userid
    function getUserIdFromToken() {
        let token = localStorage.getItem("token");
        if (!token) return null;
        debugger;
        try {
            let payload = JSON.parse(atob(token.split('.')[1]));
            return payload.uid;
        } catch (e) {
            console.error("Error decoding token:", e);
            return null;
        }
    }

    $(document).ready(function () {
        // Load Font Awesome for icons
        $('head').append('<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">');

        var userId = getUserIdFromToken();
        if (!userId) {
            console.error("User ID not found in token.");
            return;
        }

        // Fetch Company data
        $.ajax({
            url: "http://localhost:5086/api/CompanyApi/getCompany?id=" + userId,
            type: "GET",

            success: function (data) {
                debugger;
                console.log("Company data:", data);

                // Update profile fields
                const setField = (id, value) => {
                    if (value) $(`#${id}`).text(value).removeClass('empty-value');
                };

                setField('r_fullname_display', data.c_company_name);
                setField('r_email', data.c_company_email);
                setField('r_phone', data.c_company_phone);
                setField('r_address', data.c_company_address);
                setField('r_website', data.c_website);
                setField('r_reg_number', data.c_company_reg_number);
                setField('r_tax_id', data.c_tax_id_number);
                setField('r_industry', data.c_industry);

                //doxuments print
                if (Array.isArray(data.c_legal_documents) && data.c_legal_documents.length > 0) {
                    let docHtml = '';
                    data.c_legal_documents.forEach((url) => {
                        const fileName = decodeURIComponent(url.split('/').pop().split('.')[0]); // Extract name without extension
                        docHtml += `<a href="${url}" target="_blank" class="doc-link">
            <i class="fas fa-file-pdf"></i> ${fileName}
        </a><br/>`;
                    });
                    $('#r_legal_doc').html(docHtml).removeClass('empty-value');
                } else {
                    $('#r_legal_doc').text('Not provided');
                }



                // Also update the display name at the top
                if (data.c_company_name) {
                    $('#r_companyname_display').text(data.c_company_name);
                }

                if (data.c_company_logo) {
                    $('#r_logo').attr('src', data.c_company_logo);
                }

                // Calculate profile completion
                let completionFields = [
                    data.c_company_name,
                    data.c_company_email,
                    data.c_company_phone,
                    data.c_legal_documents,
                    data.c_company_logo,
                    data.c_company_address,
                    data.c_company_reg_number,
                    data.c_tax_id_number,
                    data.c_industry,
                    data.c_website
                ];

                let filledFields = completionFields.filter(field => field).length;
                let completionPercentage = Math.round((filledFields / completionFields.length) * 100);

                $('.completion-percentage').text(completionPercentage + '%');
                $('#completionBar').css('width', completionPercentage + '%');

                // Add visual cue for completion level
                if (completionPercentage < 50) {
                    $('#completionBar').css('background', 'linear-gradient(90deg, #f87171, #ef4444)');
                } else if (completionPercentage < 80) {
                    $('#completionBar').css('background', 'linear-gradient(90deg, #fbbf24, #f59e0b)');
                }
            },
            error: function (xhr, status, error) {
                console.error("Error fetching Company details:", error);
                alert("Error loading Company data. Please try again later.");
            }
        });

        // Update button click handler with enhanced feedback
        $("#updateBtn").click(function () {
            if (userId) {
                $(this).html('<i class="fas fa-spinner fa-spin"></i> Loading...');
                setTimeout(() => {
                    window.location.href = "/RecruiterDashboard/UpdateCompanyDetails?id=" + userId;
                }, 300);
            } else {
                alert("Please login again to continue.");
            }
        });

        @* // Change password button click handler with enhanced feedback
        $("#changePasswordBtn").click(function () {
            if (userId) {
                $(this).html('<i class="fas fa-spinner fa-spin"></i> Loading...');
                setTimeout(() => {
                    window.location.href = "/RecruiterDashboard/ChangePassword?id=" + userId;
                }, 300);
            } else {
                alert("Please login again to continue.");
            }
        }); *@
    });
</script>