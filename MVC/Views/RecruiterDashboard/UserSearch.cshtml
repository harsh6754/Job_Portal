  }
  
  .candidate-meta {
    flex-direction: column;
    align-items: flex-start;
    gap: 0.35rem;
  }
  
  .candidate-list-item {
    flex-wrap: wrap;
  }
  
  .candidate-info {
    width: calc(100% - 95px);
  }
  
  .candidate-actions {
    width: 100%;
