<script>
    function getUserIdFromToken() {
        let token = localStorage.getItem("token");
        if (!token) return null;

        try {
            let payload = JSON.parse(atob(token.split('.')[1]));
            return payload.uid;
        } catch (e) {
            console.error("Error decoding token:", e);
            return null;
        }
    }

    $(document).ready(function () {
        // Load Font Awesome for icons
        $('head').append('<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">');

        var userId = getUserIdFromToken();
        if (!userId) {
            console.error("User ID not found in token.");
            return;
        }

        // Fetch recruiter data
        $.ajax({
            url: "http://localhost:5086/api/CompanyApi/getRecruiter?id=" + userId,
            type: "GET",
            success: function (data) {
                console.log("Recruiter data:", data);
                
                // Update profile fields
                const setField = (id, value) => {
                    if (value) $(`#${id}`).text(value).removeClass('empty-value');
                };

                setField('r_username', data.Name);
                setField('r_fullname', data.c_fullName);
                setField('r_email', data.Email);
                setField('r_phone', data.c_phoneNumber);
                setField('r_gender', data.c_gender);
                
                // Job title (placeholder - add to your data model if needed)
                if (data.c_title) {
                    setField('r_title', data.c_title);
                }
                
                // Company info (placeholder - add to your data model if needed)
                if (data.c_companyName) {
                    setField('company_name', data.c_companyName);
                    setField('company_location', data.c_companyLocation || 'Not specified');
                    setField('company_size', data.c_companySize || 'Not specified');
                    setField('company_website', data.c_companyWebsite || 'Not specified');
                }
                
                // Also update the display name at the top
                if (data.c_fullName) {
                    $('#r_fullname_display').text(data.c_fullName);
                } else if (data.Name) {
                    $('#r_fullname_display').text(data.Name);
                }
                
                if (data.c_profileImage) {
                    $('#r_image').attr('src', data.c_profileImage);
                }
                
                if (data.c_companyLogo) {
                    $('#company_logo').attr('src', data.c_companyLogo);
                }
                
                // Calculate profile completion
                let completionFields = [
                    data.Name,
                    data.c_fullName,
                    data.Email, 
                    data.c_phoneNumber,
                    data.c_gender,
                    data.c_profileImage,
                    data.c_companyName,
                    data.c_title
                ];
                
                let filledFields = completionFields.filter(field => field).length;
                let completionPercentage = Math.round((filledFields / completionFields.length) * 100);
                
                $('#completion-percentage').text(completionPercentage + '%');
                $('#completionBar').css('width', completionPercentage + '%');
                
                // Add visual cue for completion level
                if (completionPercentage < 40) {
                    $('#completionBar').css('background', 'linear-gradient(90deg, #ef4444, #f87171)');
                    $('#completion-tips').text('Complete your profile to increase visibility to candidates');
                } else if (completionPercentage < 70) {
                    $('#completionBar').css('background', 'linear-gradient(90deg, #f59e0b, #fbbf24)');
                    $('#completion-tips').text('Almost there! Add more details to stand out');
                } else {
                    $('#completion-tips').text('Great job! Your profile looks professional');
                }
                
                // Placeholder data for stats - replace with actual API data when available
                $('#jobs_posted').text(data.jobsPosted || '0');
                $('#active_jobs').text(data.activeJobs || '0');
                $('#applications').text(data.applications || '0');
                $('#shortlisted').text(data.shortlisted || '0');
            },
            error: function (xhr, status, error) {
                console.error("Error fetching recruiter details:", error);
                Toastify({
                    text: "Error loading profile data. Please try again later.",
                    duration: 3000,
                    close: true,
                    gravity: "top",
                    position: "right",
                    backgroundColor: "#ef4444",
                }).showToast();
            }
        });

        // Button event handlers
        $("#updateBtn, #editPersonalInfoBtn, #editContactInfoBtn").click(function () {
            if (userId) {
                $(this).html('<i class="fas fa-spinner fa-spin"></i> Loading...');
                setTimeout(() => {
                    window.location.href = "/RecruiterDashboard/UpdatePersonalDetail?id=" + userId;
                }, 300);
            } else {
                Toastify({
                    text: "Please login again to continue.",
                    duration: 3000,
                    gravity: "top",
                    position: "right",
                    backgroundColor: "#ef4444",
                }).showToast();
            }
        });

        $("#changePasswordBtn").click(function () {
            if (userId) {
