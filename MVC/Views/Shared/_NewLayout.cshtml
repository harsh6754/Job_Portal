<!DOCTYPE html>
<html lang="en" data-bs-theme="light">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CareerLink</title>

    <!-- Core CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Theme CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700&display=swap"
        rel="stylesheet">
     <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <style>
        :root {
            --primary-500: #4361ee;
            --primary-400: #5f75f1;
            --primary-300: #7b89f4;
            --primary-100: #e6e9ff;
            --primary-50: #f3f5ff;

            --dark-800: #121826;
            --dark-700: #1a1d23;
            --dark-600: #2d323e;

            --light-100: #ffffff;
            --light-200: #f8f9fa;
            --light-300: #f1f3f5;

            --border-100: #e0e3eb;
            --border-200: #d0d5dd;

            --success-500: #28a745;
            --warning-500: #ffc107;
            --danger-500: #dc3545;

            --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.05);
            --shadow-md: 0 4px 12px rgba(0, 0, 0, 0.08);
            --shadow-lg: 0 10px 25px rgba(0, 0, 0, 0.1);

            --radius-sm: 6px;
            --radius-md: 10px;
            --radius-lg: 16px;

            --transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);

            --glass-effect: rgba(255, 255, 255, 0.85);
            --glass-border: 1px solid rgba(255, 255, 255, 0.18);
            --glass-blur: blur(12px);
            
            --sidebar-width: 280px;
            --sidebar-collapsed-width: 80px;
        }

        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            background-color: var(--light-200);
            color: var(--dark-600);
            line-height: 1.6;
            -webkit-font-smoothing: antialiased;
            margin: 0;
            padding: 0;
            display: flex;
            min-height: 100vh;
        }

        /* ========== Sidebar Navigation ========== */
        .sidebar {
            width: var(--sidebar-width);
            background: var(--glass-effect);
            backdrop-filter: var(--glass-blur);
            -webkit-backdrop-filter: var(--glass-blur);
            border-right: var(--glass-border);
            box-shadow: var(--shadow-md);
            position: fixed;
            top: 0;
            left: 0;
            bottom: 0;
            z-index: 1000;
            transition: var(--transition);
            overflow-y: auto;
            padding: 20px 0;
            display: flex;
            flex-direction: column;
        }

        .sidebar-header {
            padding: 0 20px 20px;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
            margin-bottom: 10px;
        }

        .sidebar-menu {
            flex: 1;
            overflow-y: auto;
            padding: 0 10px;
        }

        .nav-link {
            display: flex;
            align-items: center;
            padding: 12px 16px;
            margin: 6px 0;
            color: var(--dark-600);
            border-radius: var(--radius-md);
            transition: var(--transition);
            text-decoration: none;
            font-weight: 500;
            white-space: nowrap;
        }

        .nav-link:hover {
            background: var(--primary-100);
            color: var(--primary-500);
            transform: translateX(4px);
        }

        .nav-link.active {
            background: var(--primary-500);
            color: white;
            box-shadow: 0 4px 12px rgba(67, 97, 238, 0.2);
        }

        .nav-link i {
            font-size: 1.1rem;
            width: 24px;
            text-align: center;
            margin-right: 12px;
            transition: var(--transition);
        }

        .nav-link span {
            transition: var(--transition);
            opacity: 1;
        }

        .sidebar-footer {
            padding: 20px;
            border-top: 1px solid rgba(0, 0, 0, 0.05);
            margin-top: auto;
        }

        /* ========== Profile Section ========== */
        .profile-wrapper {
            position: relative;
            width: 70px;
            height: 70px;
            cursor: pointer;
            margin: 0 auto;
        }

        .profile-img {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid var(--light-100);
            box-shadow: var(--shadow-sm);
            transition: var(--transition);
        }

        .profile-wrapper:hover .profile-img {
            transform: scale(1.05);
            box-shadow: 0 0 0 3px var(--primary-100);
        }

        .progress-ring {
            position: absolute;
            top: -4px;
            left: -4px;
            width: 78px;
            height: 78px;
            transform: rotate(-90deg);
        }

        .progress-ring-circle {
            stroke: var(--primary-500);
            stroke-width: 3;
            fill: transparent;
            stroke-dasharray: 220;
            stroke-dashoffset: 220;
            transition: stroke-dashoffset 0.6s cubic-bezier(0.68, -0.55, 0.27, 1.55);
        }

        .percentage-badge {
            position: absolute;
            bottom: -4px;
            right: -4px;
            background: var(--primary-500);
            color: var(--light-100);
            border-radius: 50%;
            width: 26px;
            height: 26px;
            font-size: 13px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            border: 2px solid var(--light-100);
            transition: var(--transition);
            padding: 15px;
        }

        /* ========== Main Content Area ========== */
        .main-content {
            flex: 1;
            margin-left: var(--sidebar-width);
            transition: var(--transition);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .topbar {
            height: 60px;
            background: var(--glass-effect);
            backdrop-filter: var(--glass-blur);
            -webkit-backdrop-filter: var(--glass-blur);
            border-bottom: var(--glass-border);
            box-shadow: var(--shadow-sm);
            position: sticky;
            top: 0;
            z-index: 100;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 20px;
        }

        .content-wrapper {
            flex: 1;
            padding: 20px;
        }

        .footer {
            background: var(--glass-effect);
            backdrop-filter: var(--glass-blur);
            -webkit-backdrop-filter: var(--glass-blur);
            border-top: var(--glass-border);
            padding: 15px 0;
            text-align: center;
            font-size: 0.9rem;
            color: var(--dark-600);
        }

        /* ========== Collapsed Sidebar ========== */
        .sidebar-collapsed {
            width: var(--sidebar-collapsed-width);
            overflow: hidden;
        }

        .sidebar-collapsed .nav-link span {
            opacity: 0;
            width: 0;
            display: none;
        }

        .sidebar-collapsed .nav-link i {
            margin-right: 0;
            font-size: 1.3rem;
        }

        .sidebar-collapsed .sidebar-header,
        .sidebar-collapsed .sidebar-footer {
            padding: 20px 10px;
            text-align: center;
        }

        .sidebar-collapsed ~ .main-content {
            margin-left: var(--sidebar-collapsed-width);
        }

        /* ========== Toggle Button ========== */
        .sidebar-toggle {
            background: none;
            border: none;
            color: var(--dark-600);
            font-size: 1.2rem;
            cursor: pointer;
            padding: 5px;
            border-radius: 50%;
            width: 36px;
            height: 36px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: var(--transition);
        }

        .sidebar-toggle:hover {
            background: var(--light-300);
            color: var(--primary-500);
        }

        /* ========== Responsive Adjustments ========== */
        @@media (max-width: 992px) {
            .sidebar {
                transform: translateX(-100%);
                z-index: 1100;
            }
            
            .sidebar.active {
                transform: translateX(0);
            }
            
            .main-content {
                margin-left: 0 !important;
            }
            
            .mobile-menu-toggle {
                display: flex !important;
            }
        }

        @@media (max-width: 768px) {
            .sidebar {
                width: 260px;
            }
        }

        /* Mobile menu toggle button */
        .mobile-menu-toggle {
            display: none;
            background: none;
            border: none;
            color: var(--dark-600);
            font-size: 1.5rem;
            cursor: pointer;
            margin-right: 10px;
        }

        /* Animation for sidebar */
        @@keyframes slideIn {
            from { transform: translateX(-100%); }
            to { transform: translateX(0); }
        }

        @@keyframes slideOut {
            from { transform: translateX(0); }
            to { transform: translateX(-100%); }
        }
    </style>
</head>

<body>
    <!-- Sidebar Navigation -->
    <aside class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <div class="profile-wrapper" data-bs-toggle="tooltip" data-bs-placement="right" title="Profile Completion">
                <svg class="progress-ring">
                    <circle class="progress-ring-circle" cx="39" cy="39" r="35"></circle>
                </svg>
                <img id="profileImage" src="~/img/default-profile.png" class="profile-img" alt="Profile">
                <div class="percentage-badge" id="profilePercentage">0</div>
            </div>
        </div>

        <nav class="sidebar-menu">
            <a class="nav-link" asp-area="" asp-controller="UserDashboard" asp-action="Index">
                <i class="fas fa-home"></i>
                <span>Home</span>
            </a>
            <a class="nav-link" asp-area="" asp-controller="UserDetails" asp-action="PersonalInfo">
                <i class="fas fa-user"></i>
                <span>Personal</span>
            </a>
            <a class="nav-link" asp-area="" asp-controller="UserDetails" asp-action="Education">
                <i class="fas fa-graduation-cap"></i>
                <span>Education</span>
            </a>
            <a class="nav-link" asp-area="" asp-controller="UserDetails" asp-action="Skills">
                <i class="fas fa-code"></i>
                <span>Skills</span>
            </a>
            <a class="nav-link" asp-area="" asp-controller="UserDetails" asp-action="JobPreference">
                <i class="fas fa-briefcase"></i>
                <span>Job Preference</span>
            </a>
            <a class="nav-link" asp-area="" asp-controller="UserDetails" asp-action="Experience">
                <i class="fa fa-history" aria-hidden="true"></i>
                <span>Experience</span>
            </a>
            <a class="nav-link" asp-area="" asp-controller="UserDetails" asp-action="Projects">
                <i class="fas fa-project-diagram"></i>
                <span>Projects</span>
            </a>
            <a class="nav-link" asp-area="" asp-controller="UserDetails" asp-action="Certificates">
                <i class="fas fa-certificate"></i>
                <span>Certificates</span>
            </a>
            <a class="nav-link" asp-area="" asp-controller="UserDetails" asp-action="UploadResume">
                <i class="fas fa-file-upload"></i>
                <span>Upload Resume</span>
            </a>
            <a class="nav-link" asp-area="" asp-controller="UserDetails" asp-action="UsersDetail">
                <i class="fas fa-file-alt"></i>
                <span>User Details</span>
            </a>
            <a class="nav-link" asp-area="" asp-controller="CreateResume" asp-action="Resume">
                <i class="fa fa-file" aria-hidden="true"></i>
                <span>Build Your Resume</span>
            </a>
        </nav>

        <div class="sidebar-footer">
            <button class="sidebar-toggle" id="sidebarToggle">
                <i class="fas fa-chevron-left"></i>
            </button>
        </div>
    </aside>

    <!-- Main Content Area -->
    <div class="main-content" id="mainContent">
        <header class="topbar">
            <button class="mobile-menu-toggle" id="mobileMenuToggle">
                <i class="fas fa-bars"></i>
            </button>
            <div class="d-flex align-items-center">
                <!-- You can add search or other topbar elements here -->
            </div>
        </header>

        <main class="content-wrapper">
            <div class="container-fluid">
                @RenderBody()
            </div>
        </main>

        <footer class="footer">
            <div class="container-fluid">
                <p>&copy; 2025 - CareerLink | Connecting Talent, Building Futures!</p>
            </div>
        </footer>
    </div>

    <!-- Core Scripts -->
   
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- SweetAlert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        $(document).ready(function () {
            // Initialize tooltips
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });

            // Highlight current active nav link
            const currentPath = window.location.pathname;
            $('.nav-link').each(function () {
                const linkPath = $(this).attr('href');
                if (currentPath.includes(linkPath)) {
                    $(this).addClass('active');
                }
            });

            // Sidebar toggle functionality
            const sidebar = $('#sidebar');
            const mainContent = $('#mainContent');
            const sidebarToggle = $('#sidebarToggle');
            const mobileMenuToggle = $('#mobileMenuToggle');

            sidebarToggle.on('click', function() {
                sidebar.toggleClass('sidebar-collapsed');
                const icon = $(this).find('i');
                if (sidebar.hasClass('sidebar-collapsed')) {
                    icon.removeClass('fa-chevron-left').addClass('fa-chevron-right');
                } else {
                    icon.removeClass('fa-chevron-right').addClass('fa-chevron-left');
                }
            });

            mobileMenuToggle.on('click', function() {
                sidebar.toggleClass('active');
            });

            // Close sidebar when clicking outside on mobile
            $(document).on('click', function(e) {
                if ($(window).width() <= 992 && !$(e.target).closest('#sidebar, #mobileMenuToggle').length) {
                    sidebar.removeClass('active');
                }
            });

            // Profile data loading
            function getUserIdFromToken() {
                const token = localStorage.getItem("token");
                if (!token) return null;
                const payload = JSON.parse(atob(token.split('.')[1]));
                return payload.uid;
            }

            const userId = getUserIdFromToken();
            if (!userId) return;

            // Load profile image
            $.ajax({
                url: `http://localhost:5086/api/UserDetails/GetUserProfile/${userId}`,
                success: function (response) {
                    if (response.data?.c_profileImage) {
                        $("#profileImage").attr("src", response.data.c_profileImage);
                    }
                },
                error: function () {
                    console.log("Error loading profile image");
                }
            });

            // Load profile completion
            $.ajax({
                url: `http://localhost:5086/api/UserDetails/GetProfilePercentage/${userId}`,
                success: function (response) {
                    const percentage = Math.round(response.profile_completion_percentage || 0);
                    updateProfileProgress(percentage);
                },
                error: function () {
                    console.log("Error loading profile completion");
                    updateProfileProgress(0);
                }
            });
        });

        function updateProfileProgress(percentage) {
            const circle = document.querySelector('.progress-ring-circle');
            const radius = 35;
            const circumference = 2 * Math.PI * radius;
            const offset = circumference - (percentage / 100) * circumference;

            circle.style.strokeDashoffset = offset;
            document.getElementById('profilePercentage').textContent = percentage;

            // Change color based on completion level
            if (percentage >= 80) {
                circle.style.stroke = 'var(--success-500)';
                document.getElementById('profilePercentage').style.background = 'var(--success-500)';
            } else if (percentage >= 50) {
                circle.style.stroke = 'var(--warning-500)';
                document.getElementById('profilePercentage').style.background = 'var(--warning-500)';
            } else {
                circle.style.stroke = 'var(--danger-500)';
                document.getElementById('profilePercentage').style.background = 'var(--danger-500)';
            }
        }

        // Handle window resize
        $(window).on('resize', function() {
            if ($(window).width() > 992) {
                $('#sidebar').removeClass('active');
            }
        });
    </script>
</body>

</html>