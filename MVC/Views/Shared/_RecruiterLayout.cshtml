     <script>
        $(document).ready(function () {
            let companyId;
            let notifications = [];

            // Function to get company ID
            async function getCompanyId() {
                try {
                    const response = await fetch('http://localhost:5086/api/CompanyApi/getCompanyId/131');
                    const data = await response.json();
                    companyId = data;
                    return data;
                } catch (error) {
                    console.error('Error fetching company ID:', error);
                    return null;
                }
            }

            // Function to get unread notification count
            async function getUnreadCount() {
                try {
                    const response = await fetch(`http://localhost:5086/api/ApplyJob/GetUnreadCount/${companyId}`);
                    const count = await response.json();
                    updateNotificationBadge(count);
                } catch (error) {
                    console.error('Error fetching unread count:', error);
                }
            }

            // Function to get all notifications
            async function getAllNotifications() {
                try {
                    const response = await fetch(`http://localhost:5086/api/ApplyJob/All/${companyId}`);
                    notifications = await response.json();
                    updateNotificationList();
                } catch (error) {
                    console.error('Error fetching notifications:', error);
                }
            }

            // Function to get unread notifications
            async function getUnreadNotifications() {
                try {
                    const response = await fetch(`http://localhost:5086/api/ApplyJob/Unread/${companyId}`);
                    const unreadNotifications = await response.json();
                    return unreadNotifications;
                } catch (error) {
                    console.error('Error fetching unread notifications:', error);
                    return [];
                }
            }

            // Function to mark all notifications as read
            async function markAllAsRead() {
                try {
                    const response = await fetch(`http://localhost:5086/api/ApplyJob/MarkAllAsRead/${companyId}`, {
                        method: 'PUT'
                    });
                    const result = await response.json();
                    if (result === 1) {
                        await getAllNotifications();
                        updateNotificationBadge(0);
                    }
                } catch (error) {
                    console.error('Error marking notifications as read:', error);
                }
            }

            // Function to delete multiple notifications
            async function deleteMultipleNotifications(notificationIds) {
                try {
                    const response = await fetch('http://localhost:5086/api/ApplyJob/DeleteMultiple', {
                        method: 'DELETE',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify(notificationIds)
                    });
                    const result = await response.json();
                    if (result) {
                        await getAllNotifications();
                        await getUnreadCount();
                    }
                } catch (error) {
                    console.error('Error deleting notifications:', error);
                }
            }

            // Function to update notification badge
            function updateNotificationBadge(count) {
                const badge = $("#notificationBadge");
                if (count > 0) {
                    badge.text(count).show();
                    pulseBadge();
                } else {
                    badge.hide();
                }
            }

            // Function to update notification list
            function updateNotificationList() {
                const notificationList = $("#notificationsList");
                notificationList.empty();

                notifications.forEach(notification => {
                    const notificationItem = `
                        <div class="notification-item ${!notification.isRead ? 'unread' : ''}" data-id="${notification.notificationId}">
                            <div class="notification-content">
                                <p class="notification-text">${notification.message}</p>
                                <small class="notification-time">
                                    <i class="far fa-clock"></i> ${formatDate(notification.createdAt)}
                                </small>
                            </div>
                        </div>
                    `;
                    notificationList.append(notificationItem);
                });
            }

            // Function to format date
            function formatDate(dateString) {
                const date = new Date(dateString);
                const now = new Date();
                const diff = now - date;
                
                // Less than 1 minute
                if (diff < 60000) return 'Just now';
                
                // Less than 1 hour
                if (diff < 3600000) {
                    const minutes = Math.floor(diff / 60000);
                    return `${minutes} minute${minutes > 1 ? 's' : ''} ago`;
                }
                
                // Less than 1 day
                if (diff < 86400000) {
                    const hours = Math.floor(diff / 3600000);
                    return `${hours} hour${hours > 1 ? 's' : ''} ago`;
                }
                
                // More than 1 day
                return date.toLocaleDateString();
            }

            // Initialize notification system
            async function initializeNotifications() {
                companyId = await getCompanyId();
                if (companyId) {
                    await getUnreadCount();
                    await getAllNotifications();
                }
            }

            // Initialize when document is ready
            initializeNotifications();

