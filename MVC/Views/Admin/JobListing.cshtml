@{
    ViewData["Title"] = "Job Listing";
    Layout = "_AdminLayout";
    var companyId = ViewBag.CompanyId;
}

<style>
    .text-primary {
        color: #4361ee !important;
    }
    .btn-primary {
        background-color: #4361ee !important;
        border-color: #4361ee !important;
    }
    .btn-primary:hover {
        background-color: #3f51b5 !important;
        border-color: #3f51b5 !important;
    }
    .company-banner {
        height: 100px;
        background: linear-gradient(135deg, #4361ee 0%, #3f51b5 100%);
        position: relative;
        border-radius: 1rem;
        margin-bottom: 4rem;
        box-shadow: 0 4px 20px rgba(67, 97, 238, 0.15);
    }
    .company-logo {
        width: 150px;
        height: 150px;
        border: 4px solid #fff;
        border-radius: 1rem;
        position: absolute;
        bottom: -75px;
        left: 40px;
        object-fit: cover;
        background-color: white;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }
    .company-logo:hover {
        transform: scale(1.05);
    }
    .job-card {
        border: none;
        border-radius: 1rem;
        transition: all 0.3s ease;
        height: 100%;
        background: white;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
    }
    .job-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    }
    .section-title {
        border-bottom: 2px solid #e3e6f0;
        padding-bottom: 0.5rem;
        margin-bottom: 1.5rem;
        font-weight: 600;
        color: #1f2937;
    }
    .company-info-card {
        background: white;
        border-radius: 1rem;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
        border: none;
    }
    .company-info-card:hover {
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    }
    .company-stats {
        font-size: 0.9rem;
    }
    .company-stats .badge {
        font-size: 0.8rem;
        padding: 0.5em 1em;
        border-radius: 2rem;
    }
    .info-label {
        color: #6b7280;
        font-size: 0.9rem;
        margin-bottom: 0.25rem;
    }
    .info-value {
        color: #1f2937;
        font-weight: 500;
    }
    .company-status {
        padding: 0.5rem 1rem;
        border-radius: 2rem;
        font-weight: 500;
        font-size: 0.9rem;
    }
    .company-status.verified {
        background-color: #dcfce7;
        color: #166534;
    }
    .company-status.pending {
        background-color: #fef9c3;
        color: #854d0e;
    }
    .company-status.rejected {
        background-color: #fee2e2;
        color: #991b1b;
    }
    .job-icon {
        width: 32px;
        height: 32px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 0.5rem;
        background-color: #f3f4f6;
        color: #4361ee;
        margin-right: 0.5rem;
    }
    .main-container {
        background-color: #f9fafb;
        min-height: 100vh;
        padding: 2rem 0;
    }
    .stats-card {
        background: linear-gradient(135deg, #4361ee 0%, #3f51b5 100%);
        color: white;
        border-radius: 1rem;
        padding: 1.5rem;
        margin-bottom: 1rem;
    }
    .stats-card .stats-label {
        font-size: 0.9rem;
        opacity: 0.9;
    }
    .stats-card .stats-value {
        font-size: 1.5rem;
        font-weight: 600;
    }
</style>

<main class="main-container">
    <div class="container-fluid">
        <!-- Company Banner -->
        <div id="companyBanner" class="company-banner">
            <img id="companyLogo" src="" alt="Company Logo" class="company-logo" />
        </div>

        <!-- Company Info Section -->
        <div class="row g-4 mb-4">
            <div class="col-md-8">
                <div class="company-info-card p-4">
                    <div class="d-flex align-items-center mb-4">
                        <h3 id="companyName" class="mb-0 me-3"></h3>
                        <span id="companyStatus" class="company-status"></span>
                    </div>
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <div class="info-label">Industry</div>
                                <div id="companyIndustry" class="info-value"></div>
                            </div>
                            <div class="mb-3">
                                <div class="info-label">Registration No</div>
                                <div id="companyRegNumber" class="info-value"></div>
                            </div>
                            <div class="mb-3">
                                <div class="info-label">Tax ID</div>
                                <div id="companyTaxId" class="info-value"></div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <div class="info-label">Email</div>
                                <a href="#" id="companyEmail" class="info-value text-primary text-decoration-none"></a>
                            </div>
                            <div class="mb-3">
                                <div class="info-label">Phone</div>
                                <div id="companyPhone" class="info-value"></div>
                            </div>
                            <div class="mb-3">
                                <div class="info-label">Website</div>
                                <a href="#" id="companyWebsite" class="info-value text-primary text-decoration-none" target="_blank"></a>
                            </div>
                        </div>
                    </div>
                    <div class="mt-3">
                        <div class="info-label">Address</div>
                        <div id="companyAddress" class="info-value"></div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stats-card">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="stats-label">Active Jobs</div>
                        <div id="activeJobsCount" class="stats-value">0</div>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="stats-label">Total Applications</div>
                        <div id="totalApplications" class="stats-value">0</div>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="stats-label">Interview Scheduled</div>
                        <div id="interviewScheduled" class="stats-value">0</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Job Listings Section -->
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-0 py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-briefcase me-2 text-primary"></i>Active Job Listings
                    </h5>
                </div>
            </div>
            <div class="card-body">
                <div id="jobContainer" class="row g-4">
                    <!-- Jobs will be dynamically inserted here -->
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <script>
        const companyId = "@companyId";

        $(document).ready(function () {
            // Fetch company details
            $.ajax({
                url: `http://localhost:5086/api/AdminApi/getrecruiter`,
                type: "GET",
                success: function (recruiters) {
                    // Find the company with matching ID
                    const company = recruiters.find(r => r.c_company_id === parseInt(companyId));
                    if (!company) {
                        console.error("Company not found");
                        return;
                    }

                    // Update company banner
                    if (company.c_company_logo) {
                        $("#companyLogo").attr("src", company.c_company_logo);
                    } else {
                        $("#companyLogo").attr("src", "https://via.placeholder.com/150");
                    }

                    // Update company info
                    $("#companyName").text(company.c_company_name || "Company Name");
                    $("#companyIndustry").text(company.c_industry_name || "N/A");
                    $("#companyRegNumber").text(company.c_company_reg_number || "N/A");
                    $("#companyTaxId").text(company.c_tax_id_number || "N/A");
                    $("#companyAddress").text(company.c_company_address || "N/A");
                    $("#companyEmail").text(company.c_company_email || "N/A").attr("href", `mailto:${company.c_company_email}`);
                    $("#companyPhone").text(company.c_company_phone || "N/A");
                    $("#companyWebsite").text(company.c_website || "N/A").attr("href", company.c_website);

                    // Update company status
                    const statusBadge = $("#companyStatus");
                    if (company.c_verified_status === true) {
                        statusBadge.removeClass().addClass("company-status verified").text("Verified");
                    } else if (company.c_verified_status === false) {
                        statusBadge.removeClass().addClass("company-status rejected").text("Rejected");
                    } else {
                        statusBadge.removeClass().addClass("company-status pending").text("Pending Verification");
                    }
                },
                error: function (err) {
                    console.error("Error fetching company details:", err);
                }
            });

            // Fetch jobs
            $.ajax({
                url: `http://localhost:5086/api/AdminApi/jobs-with-company-info/${companyId}`,
                type: "GET",
                success: function (data) {
                    if (!data || data.length === 0) {
                        $('#jobContainer').html(`<div class="col-12 text-center text-warning">No jobs found for this company.</div>`);
                        return;
                    }

                    // Update active jobs count
                    $("#activeJobsCount").text(data.length);

                    data.forEach(job => {
                        const card = `
                            <div class="col-md-6 col-lg-4">
                                <div class="job-card p-4">
                                    <h5 class="text-primary mb-4">${job.c_job_title}</h5>
                                    <div class="mb-4">
                                        <div class="d-flex align-items-center mb-3">
                                            <span class="job-icon"><i class="fas fa-map-marker-alt"></i></span>
                                            <div>
                                                <div class="info-label">Location</div>
                                                <div class="info-value">${job.c_job_location ?? 'N/A'}</div>
                                            </div>
                                        </div>
                                        <div class="d-flex align-items-center mb-3">
                                            <span class="job-icon"><i class="fas fa-money-bill-wave"></i></span>
                                            <div>
                                                <div class="info-label">Salary</div>
                                                <div class="info-value">${job.c_salary ?? 'N/A'}</div>
                                            </div>
                                        </div>
                                        <div class="d-flex align-items-center mb-3">
                                            <span class="job-icon"><i class="fas fa-users"></i></span>
                                            <div>
                                                <div class="info-label">Vacancies</div>
                                                <div class="info-value">${job.c_vacant_seats ?? 'N/A'} positions</div>
                                            </div>
                                        </div>
                                        <div class="d-flex align-items-center">
                                            <span class="job-icon"><i class="fas fa-calendar-alt"></i></span>
                                            <div>
                                                <div class="info-label">Expires</div>
                                                <div class="info-value">${job.c_expire_date ?? 'N/A'}</div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="text-muted">Posted: ${job.c_created_at ? new Date(job.c_created_at).toLocaleDateString() : 'N/A'}</small>
                                        <a href="/Admin/CandidateListing?jobId=${job.c_job_id}" class="btn btn-primary btn-sm">
                                            View Candidates <i class="fas fa-arrow-right ms-2"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        `;
                        $('#jobContainer').append(card);
                    });
                },
                error: function (err) {
                    console.error(err);
                    $('#jobContainer').html(`<div class="col-12 text-center text-danger">Failed to load jobs.</div>`);
                }
            });
        });
    </script>
}
